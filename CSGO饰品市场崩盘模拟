        }
        
        button {
            padding: 12px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            transition: background-color 0.3s ease;
            min-height: 48px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        
        #buy-btn {
            background-color: #27ae60;
            color: white;
            flex: 1;
        }
        
        .sell-btn {
